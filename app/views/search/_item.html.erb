<hr class="sr-only">
<article class="card mb-3">
  <div class="card-header">
    <a class="text-muted float-right" href="<%= item.via %>">
      <%= time_tag(item.created_at, time_ago_in_words(item.created_at)) %>
    </a>
    <a class="text-muted card-link card-permalink" href="<%= item.via %>"><%= @source.title %></a>
  </div>

  <div class="card-block">
    <% if item.title %>
      <h4 class="card-title"><a href="<%= item.url %>"><%= item.title %></a></h4>
    <% end %>

    <% if item.html %>
      <div class="card-text">
        <%= item.html.html_safe %>
      </div>
    <% end %>

    <% if item.image %>
      <p class="card-text text-center mt-3">
        <%= image_tag item.image, class: 'img-fluid' %>
      </p>
    <% end %>

    <% if item.counts %>
      <% item.counts.each do |k, v| %>
        <a class="card-link text-muted" href="<%= item.via %>">
          <%= number_to_human(v) %>
          <%= k.pluralize(v) %>
        </a>
      <% end %>
    <% end %>
  </div>
</article>
