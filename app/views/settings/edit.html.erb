<% content_for(:page, 'settings') %>

<header class="mb-5">
  <h1 class="display-3 text-center mb-3">Settings</h1>
</header>

<form class="form-sync">
  <div class="form-group">
    <%= label_tag 'sync_id', 'Sync code' %>
    <%= text_field_tag 'sync_id', @sync_id, class: 'form-control' %>
    <span class="text-muted">Used to communicate with the servers<span>
  </div>

  <div class="form-group">
    <%= label_tag 'passphrase' %>
    <%= password_field_tag 'passphrase', nil, class: 'form-control' %>
    <span class="text-muted">Used to encrypt and decrypt data on the clients<span>
  </div>
</form>
